{
  "name": "douglasgreyling/light-service",
  "description": "A service object framework for PHP",
  "require-dev": {
    "phpunit/phpunit": "^5.7.27"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "LightService\\": "src/",
      "LightService\\Exception\\": "src/exceptions",
      "LightService\\Fixtures\\Actions\\": "tests/fixtures/actions",
      "LightService\\Fixtures\\Organizers\\": "tests/fixtures/organizers"
    }
  },
  "require": {
    "php": ">=5.6",
    "doctrine/inflector": "1.1.0"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    }
  },
  "license": "MIT"
}
